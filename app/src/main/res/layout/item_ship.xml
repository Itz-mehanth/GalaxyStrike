<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@android:color/background_dark">

        <ImageView
            android:id="@+id/shipImageView"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:contentDescription="Ship Image" />

        <TextView
            android:id="@+id/shipNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ship Name"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/shipCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: 0"
            android:padding="8dp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/selectShipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Ship" />
</LinearLayout>
